{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "css/**", "use": "@vercel/static" },
    { "src": "javascript/**", "use": "@vercel/static" },
    { "src": "resources/**", "use": "@vercel/static" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js", "headers": { "Access-Control-Allow-Origin": "*" } },
    { "src": "/css/(.*)", "dest": "/css/$1", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "src": "/javascript/(.*)", "dest": "/javascript/$1", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "src": "/resources/(.*)", "dest": "/resources/$1", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "src": "/(.*\\.html)", "dest": "/$1", "headers": { "Cache-Control": "public, max-age=3600" } },
    { "src": "/robots.txt", "dest": "/robots.txt", "headers": { "Content-Type": "text/plain" } },
    { "src": "/sitemap.xml", "dest": "/sitemap.xml", "headers": { "Content-Type": "application/xml; charset=utf-8" } },
    { "src": "/(.*)", "dest": "/index.html", "headers": {
      "X-Content-Type-Options": "nosniff",
      "X-Frame-Options": "DENY",
      "X-XSS-Protection": "1; mode=block",
      "Referrer-Policy": "strict-origin-when-cross-origin"
    }}
  ],
  "env": {
    "NODE_ENV": "production"
  }
}